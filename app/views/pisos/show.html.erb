<div class="container">
  <div class="wrapper">
    <div class="product-img">
      <h1><%= @piso.nome %></h1>
      <%= cl_image_tag @piso.photo.key, height: 300, width: 413, crop: :fill %>
    </div>
    <div class="price-flex" style="color:white">
        <p>R$<%= @piso.valor %></p>
        <p><%= @piso.prazo %>dias corridos</p>
    </div>
    <div class="button-action">
     <a href="https://api.whatsapp.com/send?phone=+551599816-4773">Comprar</a>
    </div>
    <div class="button-action">
      <%= link_to "Deletar #{@piso.nome}",
        piso_path(@piso),
        method: :delete,
        data: { confirm: "Tem certeza?" } %>
    </div>
    <div class="button-action">
      <%= link_to "Pag inicial", root_path, class: "button-action"%>
    </div>
  </div>
</div>
