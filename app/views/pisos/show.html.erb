<div class="container">
  <div class="wrapper">
    <div class="product-img">
      <h1><%= @piso.nome %></h1>
      <%= cl_image_tag @piso.photo.key, height: 300, width: 413, crop: :fill %>
    </div>
    <div class="price-flex" style="color:white">
        <p>R$<%= @piso.valor %></p>
    </div>
    <div class="product-price-btn">
     <%= link_to  pisos_new_path(@piso) do %>
     <button type="button" style="color:black">Comprar</button>
     <% end %>
    </div>
    <div class="delete">
      <%= link_to "Delete #{@piso.nome}",
        piso_path(@piso),
        method: :delete,
        data: { confirm: "Tem certeza?" } %>

    </div>
  </div>
</div>
