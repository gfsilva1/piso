<div class="container">

  <div class="form">
    <form action="create" method="post">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <label for="nome">nome</label>
      <input type="text" name="pisos[nome]">
      <label for="tamanho">Tam</label>
      <input type="text" name="pisos[tamanho]">
      <label for="valor">valor</label>
      <input type="text" name="pisos[valor]">
      <input type="submit">
    </form>
  </div>
  <div>
    <%= link_to pisos_path do %>
    <i class="fa fa-history"></i> Ver pisos
    <% end %>
  </div>
</div>
